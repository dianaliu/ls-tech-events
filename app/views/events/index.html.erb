<div class="panel">
  <h3>Tech events, updated weekly.</h3>
  <p>Message me <%= link_to('@dianagliu', 'https://twitter.com/dianagliu') %> to add or correct any information. View as <%= link_to('json', export_events_path(format: :json)) %> or <%= link_to('xml', export_events_path(format: :xml)) %>.</p>

  <ul class="inline-list">
    <li><b>Key:</b></li>
    <li><span class="upcoming-event">Next 3 months</span></li>
    <li><span class="past-event">Already happened</span></li>
  </ul>
</div>

<% if !current_user %>
  <%= render :template => 'users/new' %>
<% end %>

<div id="events-list">
  <input type="text" class="search" placeholder="Search Events">

  <table>
    <thead>
      <tr>
        <th>Logo</th>
        <th><i class="fi-filter"></i> <span class="sort" data-sort="name">Name</span></th>
        <th>Date</th>
        <th>Description</th>
        <th><i class="fi-filter"></i> <span class="sort" data-sort="location">Location</span></th>
        <th>More Info</th>
      </tr>
    </thead>
    <tbody class="list">
      <% @events.each do |event| %>
      <tr class="<%= event.is_past? ? 'past-event' : '' %> <%= event.is_upcoming? ? 'upcoming-event' : '' %>">
        <td><%= image_tag(event.logo) %></td>
        <td class="name"><%= link_to(event.name, event.website_url) %></td>
        <td class="date"><%= event.formatted_start_and_end_date %></td>
        <td class="description"><%= event.description %></td>
        <td class="location"><%= event.location %></td>
        <td><%= link_to('more info', event_path(event)) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>


